<!DOCTYPE html>
<html>
<head>
  <title>CronManager</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
   <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
   <![endif]-->
</head>
<body>
<div class="navbar navbar-fixed-top">
   <div class="navbar-inner">
     <div class="container">
       <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
         <span class="icon-bar"></span>
         <span class="icon-bar"></span>
         <span class="icon-bar"></span>
       </a>
       <a class="brand" href="/">Task manager</a>
       <div class="nav-collapse">
         <ul class="nav">
           <li class="">
             <%= link_to "Projects", "/" %>
           </li>
           <li class="">
             <%= link_to "Tasks", "/tasks" %>
           </li>
           <li>
             <%= link_to "Logs", "/logs" %>
           </li>
           <li>
             <%= link_to "Scheduler", "/schedulers" %>
           </li>
         </ul>
       </div>
     </div>
   </div>
</div>

<br><br><br>

<div class="container">
  <% if flash[:notice] %>
  <p class="alert alert-info"><i class="icon-ok"></i> <%= flash[:notice] %></p>
  <% end %>
  <% if flash[:error] %>
    <p class="alert alert-error"><i class="icon-remove"></i> <%= flash[:error] %></p>
  <% end %>
  
  <%= yield %>

</div>


</body>
</html>
